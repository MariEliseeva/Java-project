<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/AudioRecorder"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="alekhina_eliseeva.ssa.AudioRecorder">

    <Button
        android:id="@+id/startRecord"
        android:layout_width="154dp"
        android:layout_height="wrap_content"
        android:text="начать запись"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.135"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.345" />

    <Button
        android:id="@+id/pauseRecord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="остановить запись"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.534"
        app:layout_constraintStart_toEndOf="@+id/startRecord"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.345" />

    <Button
        android:id="@+id/playRecord"
        android:layout_width="157dp"
        android:layout_height="wrap_content"
        android:text="воспроизвести"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.136"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/startRecord"
        app:layout_constraintVertical_bias="0.541" />

    <Button
        android:id="@+id/stopPlaySecord"
        android:layout_width="156dp"
        android:layout_height="wrap_content"
        android:text="остановить"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toEndOf="@+id/playRecord"
        app:layout_constraintTop_toBottomOf="@+id/pauseRecord"
        app:layout_constraintVertical_bias="0.541" />

</android.support.constraint.ConstraintLayout>
